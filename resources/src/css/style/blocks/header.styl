@import "../layout/variables.styl"

.header 
    box-shadow: 0 0 3px 0 rgba(31,45,61,0.05), 0 2px 6px 0 rgba(31,45,61,0.07); 
    margin-bottom: 67px;

.header__container
    padding: 15px 0;
    display: flex;

.header__left
    display: flex;

.header__logo
    width: 170px;
    height: 38px;
    margin-right: 250px;

.nav
    font: 600 18px Arial #8591A5

.nav__list
    display: flex;

.nav__item:not(:last-child)
    margin-right: 146px;

.nav__link
    display: flex;

.nav__arrow-down
    width: 7px;
    height: 5px;
    margin-left: 13px;

.header__right
    margin-left: auto;

.bascket
    width: 22px;
    height: 22px;
    display: inline-block;