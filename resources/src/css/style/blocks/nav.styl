@import "../layout/variables.styl"

.nav__list
    display: flex;

.nav__item
    border-top: 3px solid transparent;
    padding: 15px 15px 0 18px;
    position: relative;


.nav__item--active
    border-top: 3px solid $blue;

.nav__item--active span
    color: $blue;

.nav__name 
    font-size: 18px;
    color: $lightGrey;




.nav__popup {
    position: absolute;
    top: -500%;
    left: 50%;
    transform: translateX(-50%);
    border-radius: 6px;
    background-color: #FFFFFF;
    box-shadow: 0 2px 4px 0 rgb(59 72 88 / 40%);
    padding: 25px;
    z-index: 999;
    width: max-content;
    text-align: center;
}

.nav__item:hover > .nav__popup
    top: 144%

.nav__popup:before {
    content: '';
    width: 22px;
    height: 22px;
    position: absolute;
    top: -11px;
    background-color: #fff;
    box-shadow: -2px -2px 0 0 rgba(31,45,61,0.05), -2px -2px 0 0 rgba(31,45,61,0.07);  
    transform: translate(-50%, 0px) rotate(
45deg);
}

.nav__popup:after
    content: '';
    width: 100%;
    height: 17%;
    position: absolute;
    top: -17%;
    left: 0;
    bottom: 100%;


li.nav__popup-item:not(:last-child) {
    margin-bottom: 10px;
}

.nav__popup-item:hover 
    color: #3B4858;
    cursor: pointer