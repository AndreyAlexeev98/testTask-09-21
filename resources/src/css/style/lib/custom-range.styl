input[type=range] {
  height: 10px;
  -webkit-appearance: none;
  margin: 10px 0;
  width: 100%;
}
input[type=range]:focus {
  outline: none;
}
input[type=range]::-webkit-slider-runnable-track {
  width: 100%;
  height: 10px;
  cursor: pointer;
  animate: 0.2s;
  box-shadow: 2px 2px 2px #353535;
  background: #18b4ff;
  border-radius: 0px;
  border: 0px solid #25b8ff;
}
input[type=range]::-webkit-slider-thumb {
  box-shadow: 3px 3px 3px #414141;
  border: 4px solid #0097bd;
  height: 20px;
  width: 19px;
  border-radius: 15px;
  background: #ffffff;
  cursor: pointer;
  -webkit-appearance: none;
  margin-top: -4px;
}
input[type=range]:focus::-webkit-slider-runnable-track {
  background: #18b4ff;
}
input[type=range]::-moz-range-track {
  width: 100%;
  height: 10px;
  cursor: pointer;
  animate: 0.2s;
  box-shadow: 2px 2px 2px #353535;
  background: #18b4ff;
  border-radius: 0px;
  border: 0px solid #25b8ff;
}
input[type=range]::-moz-range-thumb {
  box-shadow: 3px 3px 3px #414141;
  border: 4px solid #0097bd;
  height: 20px;
  width: 19px;
  border-radius: 15px;
  background: #ffffff;
  cursor: pointer;
}
input[type=range]::-ms-track {
  width: 100%;
  height: 10px;
  cursor: pointer;
  animate: 0.2s;
  background: transparent;
  border-color: transparent;
  color: transparent;
}
input[type=range]::-ms-fill-lower {
  background: #18b4ff;
  border: 0px solid #25b8ff;
  border-radius: 15px;
  box-shadow: 2px 2px 2px #353535;
}
input[type=range]::-ms-fill-upper {
  background: #18b4ff;
  border: 0px solid #25b8ff;
  border-radius: 15px;
  box-shadow: 2px 2px 2px #353535;
}
input[type=range]::-ms-thumb {
  margin-top: 1px;
  box-shadow: 3px 3px 3px #414141;
  border: 4px solid #0097bd;
  height: 20px;
  width: 19px;
  border-radius: 15px;
  background: #ffffff;
  cursor: pointer;
}
input[type=range]:focus::-ms-fill-lower {
  background: #18b4ff;
}
input[type=range]:focus::-ms-fill-upper {
  background: #18b4ff;
}